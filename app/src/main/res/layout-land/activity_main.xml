<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="horizontal">
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="2">

        <TextView
            android:id="@+id/tv_equation"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            tools:hint = "1+2"
            style="@style/Header.Equation"
            android:gravity="bottom"/>
        <TextView
            android:id="@+id/tv_answer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Header.Answer"
            android:text="= 0.0" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingBottom="16dp"
            android:background="@color/color_primary">
            <Button
                android:id="@+id/btn_bracket_1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="@string/operator_open_bracket"
                style="@style/Numpad.Operation"/>
            <Button
                android:id="@+id/btn_number_seven"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="@string/number_seven"
                style="@style/Numpad.Numbers"/>
            <Button
                android:id="@+id/btn_number_four"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="@string/number_four"
                style="@style/Numpad.Numbers"/>
            <Button
                android:id="@+id/btn_number_one"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="@string/number_one"
                style="@style/Numpad.Numbers"/>
            <Button
                android:id="@+id/btn_number_dot"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="@string/number_dot"
                style="@style/Numpad.Numbers"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingBottom="16dp"
            android:background="@color/color_primary">
            <Button
                android:id="@+id/btn_bracket_2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="@string/operator_close_bracket"
                style="@style/Numpad.Operation"/>
            <Button
                android:id="@+id/btn_number_eight"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="@string/number_eight"
                style="@style/Numpad.Numbers"/>
            <Button
                android:id="@+id/btn_number_five"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="@string/number_five"
                style="@style/Numpad.Numbers"/>
            <Button
                android:id="@+id/btn_number_two"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="@string/number_two"
                style="@style/Numpad.Numbers"/>
            <Button
                android:id="@+id/btn_number_zero"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="@string/number_zero"
                style="@style/Numpad.Numbers"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingBottom="16dp"
            android:background="@color/color_primary">
            <ImageButton
                android:id="@+id/btn_delete_char"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"

                android:src="@drawable/ic_backspace_24dp"
                style="@style/Numpad.Operation"/>

            <Button
                android:id="@+id/btn_number_nine"
                style="@style/Numpad.Numbers"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="@string/number_nine" />

            <Button
                android:id="@+id/btn_number_six"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="@string/number_six"
                style="@style/Numpad.Numbers"/>
            <Button
                android:id="@+id/btn_number_three"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="@string/number_three"
                style="@style/Numpad.Numbers"/>
            <Button
                android:id="@+id/btn_result"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="@string/operation_result"
                style="@style/Numpad.Numbers"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingBottom="16dp"
            android:background="@color/color_primary_light">
            <Button
                android:id="@+id/btn_operation_delete"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="@string/operation_delete"
                style="@style/Numpad.Operation"/>
            <Button
                android:id="@+id/btn_operation_divide"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="@string/operation_divide"
                style="@style/Numpad.Operation"/>
            <Button
                android:id="@+id/btn_operation_mul"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="@string/operation_mul"
                style="@style/Numpad.Operation"/>
            <Button
                android:id="@+id/btn_operation_sub"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="@string/operation_sub"
                style="@style/Numpad.Operation"/>
            <Button
                android:id="@+id/btn_operation_sum"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="@string/operation_sum"
                style="@style/Numpad.Operation"/>
        </LinearLayout>
        <View
            android:layout_height="match_parent"
            android:layout_width="32dp"
            android:background="@color/color_accent">
        </View>
    </LinearLayout>
</LinearLayout>